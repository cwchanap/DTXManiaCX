# Default behavior
* text=auto

# Git attributes files should remain LF
.gitattributes text eol=lf

# Enforce CRLF line endings to match .editorconfig
*.cs     text eol=crlf
*.csproj text eol=crlf
*.sln    text eol=crlf
*.props  text eol=crlf
*.targets text eol=crlf
*.config text eol=crlf
*.ini    text eol=crlf
*.json   text eol=crlf
*.yml    text eol=crlf
*.yaml   text eol=crlf
*.md     text eol=crlf

# Shell scripts should remain LF
*.sh     text eol=lf

# Treat common assets as binary
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.bmp    binary
*.ico    binary
*.ttf    binary
*.otf    binary
*.wav    binary
*.mp3    binary
*.ogg    binary
